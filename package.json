{
  "name": "eclipse-con",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:static": "node scripts/build-static.mjs",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "fetch:telegram": "node scripts/fetch-telegram.mjs",
    "translate:telegram": "node scripts/translate-telegram.mjs",
    "sync:telegram": "pnpm fetch:telegram && pnpm translate:telegram",
    "precommit": "lint-staged",
    "prepare": "husky",
    "version:auto": "node scripts/bump-version.mjs"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.4",
    "lucide-react": "^0.474.0",
    "radix-ui": "^1.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.1",
    "react-router": "^7.1.5",
    "react-router-dom": "^7.1.5",
    "tailwind-merge": "^3.0.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@eslint/js": "^9.20.0",
    "@ls-lint/ls-lint": "^2.3.0",
    "@playwright/test": "^1.50.1",
    "@secretlint/core": "^8.5.0",
    "@secretlint/secretlint-rule-preset-recommend": "^8.5.0",
    "@tailwindcss/vite": "^4.0.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "cspell": "^8.17.3",
    "eslint": "^9.20.0",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^57.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "jsdom": "^26.0.0",
    "knip": "^5.43.6",
    "lighthouse": "^13.0.3",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "shadcn": "^3.8.5",
    "sharp": "^0.34.5",
    "stylelint": "^16.14.0",
    "stylelint-config-standard": "^37.0.0",
    "tailwindcss": "^4.0.7",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "prettier --check",
      "eslint --no-warn-ignored --max-warnings 0"
    ],
    "*.{json,md,css,html,yml,yaml}": [
      "prettier --check"
    ]
  }
}
